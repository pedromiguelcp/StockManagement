@model IEnumerable<StockManagement.Models.ViewMaterialModel>

@{
    ViewBag.Title = "Materials List";
}

<h2>List of Materials</h2>

<a href="@Url.Action("CreateMaterial", "Material")" class="btn btn-success btn-md">
    <i class="fas fa-plus"></i>
    <span>New</span>
</a>
<br />
<br />

<h4>
    <i class="fas fa-filter fa-1x"></i>
    Material Name
</h4>
<input id="inputDatabaseName" class="form-control" onchange="onchangeevent();"
       onkeyup="this.onchange();" />


<br />
<br />
<div id="partial">
    @{ Html.RenderAction("_TableMaterials", Model);}
</div>



<a href="@Url.Action("Index", "Home")" class="btn btn-default btn-md">
    <i class="fas fa-arrow-left"></i>
    <span>Back</span>
</a>

<script>
    function onchangeevent() {
        debugger;
        var id = $('#inputDatabaseName').val();
        $.ajax({
            url: "/Material/_TableMaterialsaux?id=" + id,
            type: "POST",
            data: '{"id":"' + id + '"}',
            success: function (data) {
                $("#partial").html(data);
            }
        });
    }
</script>
