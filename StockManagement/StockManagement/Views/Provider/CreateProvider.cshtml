@model StockManagement.Models.ProviderModel

@{
    if (ViewBag.Message == "Provider not created")
    {
    <div class="alert alert-warning" role="alert">
        <button type="button" class="close" style="color:red" data-dismiss="alert">
            x
        </button>
        This Provider name already exist, please choose a diferent one!
    </div>
    ViewBag.Message = "";
    }
    ViewBag.Title = "Create New Provider";
}

<h2>Provider Features</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name_Provider, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name_Provider, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name_Provider, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Phone_Provider, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Phone_Provider, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nada a registar" } })
            @Html.ValidationMessageFor(model => model.Phone_Provider, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mail_Provider, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Mail_Provider, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nada a registar" } })
            @Html.ValidationMessageFor(model => model.Mail_Provider, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address_Provider, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Address_Provider, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nada a registar" } })
            @Html.ValidationMessageFor(model => model.Address_Provider, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nif_Provider, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nif_Provider, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nada a registar" } })
            @Html.ValidationMessageFor(model => model.Nif_Provider, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Language_Provider, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            PT: @Html.RadioButtonFor(model => model.Language_Provider, "PT", new { @checked = true })
            <br/>
            EN: @Html.RadioButtonFor(model => model.Language_Provider, "EN")


            @Html.ValidationMessageFor(model => model.Language_Provider, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <a href="@Url.Action("ViewProviders", "Provider")" class="btn btn-default btn-md">
            <i class="fas fa-arrow-left"></i>
            <span>Back</span>
        </a>
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
