@model IEnumerable<StockManagement.Models.IntegratorModel>

@{
    ViewBag.Title = "ViewIntegrators";
}

    <h2>List of Integrators</h2>

<a href="@Url.Action("CreateIntegrator", "Integrator")" class="btn btn-success btn-md">
    <i class="fas fa-plus"></i>
    <span>New</span>
</a>
<br />
<br />
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Name_Integrator)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Phone_Integrator)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Mail_Integrator)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Address_Integrator)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Nif_Integrator)
        </th>
        <th style="text-align:center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name_Integrator)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Phone_Integrator)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Mail_Integrator)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Address_Integrator)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Nif_Integrator)
            </td>
            <td align="center">
                <a href="@Url.Action("EditIntegrator", "Integrator",new {Name_Integrator = item.Name_Integrator })" class="btn btn-info btn-md">
                    <i class="far fa-edit"></i>
                </a>
                <a href="@Url.Action("DeleteIntegrator", "Integrator",new { Name_Integrator = item.Name_Integrator })" class="btn btn-danger btn-md">
                    <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    }

</table>
<a href="@Url.Action("Index", "Home")" class="btn btn-default btn-md">
    <i class="fas fa-arrow-left"></i>
    <span>Back</span>
</a>
